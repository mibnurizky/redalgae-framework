{
    "name": "redalgae/framework",
    "description": "A lightweight PHP framework for building web applications",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/mibnurizky/redalgae-framework",
    "authors": [
        {
            "name": "Mohamad Ibnu Rizky",
            "email": "mohamadibnu.r@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "phpmailer/phpmailer": "^6.10",
        "rakit/validation": "^1.4",
        "symfony/event-dispatcher": "^5.4|^6.0",
        "symfony/security-csrf": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "RedAlgae\\": "core/",
            "RedAlgae\\Models\\": "models/",
            "RedAlgae\\Helpers\\": "helpers/",
            "RedAlgae\\Middleware\\": "middleware/"
        },
        "files": [
            "helpers/csrf_helper.php",
            "helpers/debug_helper.php",
            "helpers/general_helper.php",
            "helpers/serverside_helper.php",
            "helpers/smtp_notif_helper.php",
            "helpers/text_helper.php",
            "helpers/view_helper.php"
        ]
    },
    "scripts": {
        "post-creinstalld": [
            "php create-project.php"
        ]
    },
    "minimum-stability": "stable"
}
